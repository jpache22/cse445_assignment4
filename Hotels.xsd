<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <xs:element name="Hotels">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="Hotel" maxOccurs="unbounded">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="Name" type="xs:string"/>
              <xs:element name="Phone" type="xs:string" minOccurs="1" maxOccurs="unbounded"/>
              <xs:element name="Address">
                <xs:complexType>
                  <xs:sequence>
                    <xs:attribute name="Number" type="xs:int" minOccurs="1" maxOccurs="1"/>
                    <xs:attribute name="Street" type="xs:string" minOccurs="1" maxOccurs="1"/>
                    <xs:attribute name="City" type="xs:string" minOccurs="1" maxOccurs="1"/>
                    <xs:attribute name="State" type="xs:string" minOccurs="1" maxOccurs="1"/>
                    <xs:attribute name="Zip" type="xs:string" minOccurs="1" maxOccurs="1"/>
                  </xs:sequence>
                  <xs:attribute name="NearstAirport" type="xs:string" use="required"/>
                </xs:complexType>
              </xs:element>
            </xs:sequence>
            <xs:element name="Rating" type="xsd:float" minOccurs="0" maxOccurs="1"/>
          </xs:complexType>
        </xs:element>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
</xs:schema>
